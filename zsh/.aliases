# Common Shortcuts (cross-platform)
if [[ "$(uname -s)" == "Darwin" ]]; then
  alias ll='ls -laG'
else
  alias ll='ls -la --color=auto'
fi
alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'
alias fion='ddgr'

# Modern CLI tool replacements (if installed)
# Check if eza is installed, otherwise fall back to ls
if command -v eza &> /dev/null; then
  alias ls='eza --icons'
  alias ll='eza -la --icons --git'
  alias la='eza -a --icons'
  alias lt='eza --tree --icons'
  alias l='eza -lh --icons'
fi

# Better cat with bat (if installed)
if command -v bat &> /dev/null; then
  alias cat='bat --style=plain'
  alias catt='bat'  # cat with full styling
fi

# Better find with fd (if installed)
if command -v fd &> /dev/null; then
  alias find='fd'
fi

# Docker shortcut aliases
alias d='docker'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias dimg='docker image ls'
alias drm='docker rm'
alias drmi='docker rmi'
alias dst='docker start'
alias dsp='docker stop'
alias dlog='docker logs'
alias dexec='docker exec -it'
alias dbuild='docker build . -t'
alias dup='docker compose up -d'
alias ddown='docker compose down'
alias dprune='docker system prune -af'

# Git shortcuts
alias gpu='git push'
alias gpa='git push --all'
alias gpl='git pull'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gco='git checkout'
alias gb='git branch'
alias gd='git diff'
alias gl='git log --oneline --graph --all --decorate'
alias glog='git log --oneline --graph --color=always'

# üîÅ Rename a file (interactive)
alias ren='mv -i'

# üóëÔ∏è Safer delete - use trash function
alias del='trash'

# üõë Force delete (with confirmation)
alias del!='rm -i'

# Fuzzy Finder Aliases
alias hist='history | fzf'
alias cdf='cd $(find . -type d | fzf)'
alias cz='cd $(zoxide query -l | fzf)'

# Quick Edit & Reload
alias edp='nvim ~/dotfiles-enhanced/dotfiles-enhanced/zsh/.zshrc'
alias eda='nvim ~/dotfiles-enhanced/dotfiles-enhanced/zsh/.aliases'
alias edf='nvim ~/dotfiles-enhanced/dotfiles-enhanced/zsh/.functions'
alias src='source ~/.zshrc'

# Quick directory jumps
alias dots='cd ~/dotfiles-enhanced/dotfiles-enhanced'
alias dev='cd ~/Development'
alias dl='cd ~/Downloads'
alias docs='cd ~/Documents'

# System shortcuts (cross-platform)
if [[ "$(uname -s)" == "Darwin" ]]; then
  alias update='brew update && brew upgrade'
  alias cleanup='brew cleanup && brew autoremove'
  alias install='brew install'
else
  alias update='sudo apt update && sudo apt upgrade'
  alias cleanup='sudo apt autoremove && sudo apt autoclean'
  alias install='sudo apt install'
fi

# Tmux shortcuts
alias ta='tmux attach -t'
alias tls='tmux ls'
alias tn='tmux new -s'
alias tk='tmux kill-session -t'

